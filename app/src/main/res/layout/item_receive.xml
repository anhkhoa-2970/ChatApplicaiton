<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:layout_gravity="start"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/mLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatarReceiver"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:id="@+id/tvMessageReceive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_receive"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="@string/messenge" />

    </LinearLayout>
    <ImageView
        android:id="@+id/imgFromReceiver"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_gravity="start"
        android:src="@drawable/image_holder"
        android:contentDescription="@string/todo" />
    <LinearLayout
        android:id="@+id/llPlayMedia"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/dimen_50dp"
        android:layout_margin="@dimen/dimen_5dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:src="@drawable/ic_baseline_play_arrow_24" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="0:00"
             />
    </LinearLayout>

</LinearLayout>